<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp">

        <EditText
            android:id="@+id/sign_up_name_et"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/sign_up_name_tv"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/sign_up_name_tv"
            android:layout_width="145dp"
            android:layout_height="40dp"
            android:text="Full Name"
            android:textSize="22sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp">

        <EditText

            android:id="@+id/sign_up_roll_no_et"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/sign_up_roll_no_tv"
            android:textSize="22sp"
            android:inputType="number"/>

        <TextView
            android:id="@+id/sign_up_roll_no_tv"
            android:layout_width="145dp"
            android:layout_height="40dp"
            android:text="Roll No"
            android:textSize="22sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/sign_up_email_tv"
            android:layout_width="145dp"
            android:layout_height="40dp"
            android:text="Email Address"
            android:textSize="22sp"
            />
        <EditText
            android:inputType="textEmailAddress"
            android:id="@+id/sign_up_email_et"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/sign_up_email_tv"
            android:textSize="22sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/sign_up_phone_no_tv"
            android:layout_width="145dp"
            android:layout_height="40dp"
            android:text="Phone No"
            android:textSize="22sp"
            />
        <EditText
            android:inputType="phone"
            android:id="@+id/sign_up_phone_no_et"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/sign_up_phone_no_tv"
            android:textSize="22sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp">

        <EditText
            android:id="@+id/sign_up_batch_no_et"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/sign_up_batch_no_tv"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/sign_up_batch_no_tv"
            android:layout_width="145dp"
            android:layout_height="40dp"
            android:text="Batch No"
            android:textSize="22sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/sign_up_user_name_tv"
            android:layout_width="145dp"
            android:layout_height="40dp"
            android:text="User Name"
            android:textSize="22sp"
            />
        <EditText
            android:id="@+id/sign_up_user_name_et"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/sign_up_user_name_tv"
            android:textSize="22sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp">

        <EditText
            android:id="@+id/sign_up_password_et"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/sign_up_password_tv"
            android:textSize="22sp"
            android:inputType="textPassword"/>

        <TextView
            android:id="@+id/sign_up_password_tv"
            android:layout_width="145dp"
            android:layout_height="40dp"
            android:text="Password"
            android:textSize="22sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:inputType="text"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp">

        <EditText
            android:id="@+id/sign_up_retype_password_et"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/sign_up_retype_password_tv"
            android:textSize="22sp"
            android:inputType="textPassword"/>

        <TextView
            android:id="@+id/sign_up_retype_password_tv"
            android:layout_width="145dp"
            android:layout_height="40dp"
            android:text="Retype Password"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:inputType="text"/>
    </RelativeLayout>


    <Button
        android:id="@+id/submit_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Submit"
        android:textSize="22sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:onClick="clikeSubmitBtn"
        />
    <ListView

        android:id="@+id/sign_up_lv"
        android:layout_width="match_parent"
        android:layout_height="400dp">
    </ListView>


</LinearLayout>